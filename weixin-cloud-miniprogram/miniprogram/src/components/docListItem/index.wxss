.list-item {
  position: relative;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 3px;
  box-shadow: 1px 2px rgba(36, 37, 38, 0.13);
  font-size: 26rpx;
  
}

.item-top {
  display: flex;
  justify-content: space-between;
  padding: 5px 10px 10px 0;
}

.item-index {
  width:  100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 0 25rpx 25rpx 0;
  background: #1989fa;
  color: #fff;
}
.item-content {
  padding: 50rpx 20rpx;
  font-size: 30rpx;
}
.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
}