<view class="list-item" bind:tap="toDetail">
  <view class="item-top">
    <van-tag type="primary" mark>NO.{{index}}</van-tag>
    <view style="text-align:right">
      {{item.createTime}}
    </view>
  </view>
  <view class="item-content">
    {{item.title}}
  </view>
  <view class="item-bottom">
    <van-tag type="primary" plain round>{{item.label}}</van-tag>
    <view>
      <van-icon name="like" color="var(--base-theme-color)" />1
      <van-icon name="browsing-history" color="var(--base-theme-color)" />10
    </view>
  </view>
</view>