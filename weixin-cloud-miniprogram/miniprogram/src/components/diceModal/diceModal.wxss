.dice-box {
	position: relative;
	width: 180rpx;
	height: 180rpx;
	margin: 40rpx;
	transform-style: preserve-3d;
	transform: rotateX(-30deg) rotateY(-30deg) rotateZ(-20deg)
}
.side {
	position: absolute;
	width: 180rpx;
	height: 180rpx;
	background: #fff;
	box-shadow: inset 0 0 30rpx #ccc;
	border-radius: 30rpx;
}
.dice-box .cover,
.dice-box .inner {
	background: #e0e0e0;
	box-shadow: none;
}
.dice-box .cover {
	border-radius: 0;
	transform: translateZ(0px);
}
.dice-box .cover.x {
	transform: rotateY(90deg);
}
.dice-box .cover.z {
	transform: rotateX(90deg);
}
.dice-box .front {
	transform: translateZ(90rpx);
}
.dice-box .front.inner {
	transform: translateZ(88rpx);
}
.dice-box .back {
	transform: rotateX(-180deg) translateZ(90rpx);
}
.dice-box .back.inner {
	transform: rotateX(-180deg) translateZ(88rpx);
}
.dice-box .right {
	transform: rotateY(90deg) translateZ(90rpx);
}
.dice-box .right.inner {
	transform: rotateY(90deg) translateZ(88rpx);
}
.dice-box .left {
	transform: rotateY(-90deg) translateZ(90rpx);
}
.dice-box .left.inner {
	transform: rotateY(-90deg) translateZ(88rpx);
}
.dice-box .top {
	transform: rotateX(90deg) translateZ(90rpx);
}
.dice-box .top.inner {
	transform: rotateX(90deg) translateZ(88rpx);
}
.dice-box .bottom {
	transform: rotateX(-90deg) translateZ(90rpx);
}
.dice-box .bottom.inner {
	transform: rotateX(-90deg) translateZ(88rpx);
}
.dot {
	position: absolute;
	width: 38rpx;
	height: 38rpx;
	border-radius: 50%;
	background: #444;
	box-shadow: inset 0 0 10rpx #000;
}
.front .dot.center {
	width: 46rpx;
	height: 46rpx;
	background: #de2d2c;
	box-shadow: inset 0 0 10rpx #de2d2c;
}
.dot.center {
	margin: 71rpx 0 0 71rpx;
}
.dot.dtop {
	margin-top: 26rpx;
}
.dot.dleft {
	margin-left: 116rpx;
}
.dot.dright {
	margin-left: 26rpx;
}
.dot.dbottom {
	margin-top: 116rpx;
}
.dot.center.dleft {
	margin: 71rpx 0 0 26rpx;
}
.dot.center.dright {
	margin: 71rpx 0 0 116rpx;
}