
.index-navbar {
	display: flex;
	align-items: center;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	padding: 48px 20px 10px;
	z-index: 1;
	color: #fff;
	background: var(--base-theme-color);
}

.index-navbar-title {
	margin-right: 20rpx;
	font-size: 45rpx;
	font-weight: 500;
}

.index-search {
	width: 280rpx;
	height: 28px;
	padding: 0 !important;
}

.index-search-field {
	height: 28px;
}

.index-search-field .van-cell {
	padding: 2px 10px 2px 0 !important;
}

.index-search-input {
	padding: 0;
	height: 22px;
	min-height: 22px;
}

swiper {
	height: 330rpx;
	background-color: #fff;
	margin: 30rpx 0;
}

.image-wrapper {
	width: 100%;
	height: 100%;
	padding: 30rpx 20rpx;
	box-sizing: border-box;
}
.image-item {
	width: 100%;
	height: 100%;
	border-radius: 10rpx;
	transition: all 0.2s;
}

.current-image {
	transform: scale(1.05, 1.1);
}
.contact-view {
	position: relative;
	margin-bottom: 30rpx;
}
.contact-image {
	animation: heartbeat 2s linear alternate infinite;
}

.countdown {
	position: absolute;
	
}

@keyframes heartbeat {
	from {
		transform: scale(1);
		opacity: 0.7;
	}
	to {
		transform: scale(1.1);
		opacity: 1;
	}
}
