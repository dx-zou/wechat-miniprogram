<view class="doc-detail">
  <view class="detail-title">{{title}}</view>
  <view class="detail-like">
    <van-tag type="primary">{{label}}</van-tag>
    <van-icon name="like" color="#b2bac2" />
  </view>
  <view class="detail-content">
    <van-skeleton title row="20" loading="{{ loading }}">
      <towxml nodes="{{content}}" />
    </van-skeleton>
  </view>

</view>