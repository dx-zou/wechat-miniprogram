.detail-top {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0px 1px 3px rgba(0, 188, 212, 0.35);
}

.detail-title {
  font-size: 49rpx;
  font-weight: bold;
}

.detail-like {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-content {
  padding: 5px 5px 10px;
  border-radius: 20rpx;
  background: #fff;
}

.content-tips {
  padding: 10px 0 0 10px;
  font-size: 11px;
  color: var(--base-text-color);
}
